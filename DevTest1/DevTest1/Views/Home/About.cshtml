@Model list<DevTest1.Models.Movie>
@{
    ViewBag.Title = "About";
}
<h2>@ViewBag.Title.</h2>
<h3>@ViewBag.Message</h3>

    @Model.Count Peliculas

<table class="table">
    <thead>
        <tr>
            <th>Titulo</th>
            <th>Duracion</th>
            <th>FechaEstreno</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var Movie in Model)
        {
            var ClaseFila = string.Empty;

            if (!Movie.EstaEnCartelera)
            {
                ClaseFila = "danger";
            }
        
        <tr class="@ClaseFila">
            <td>@Movie.Titulo</td>
            <td>@Movie.Duracion</td>
            <td>@Movie.FechaEstreno</td>
        </tr>
        }
    </tbody>
</table>
